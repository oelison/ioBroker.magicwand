{
  "name": "iobroker.magicwand",
  "version": "1.0.0",
  "description": "Collect Messages from the wand to write automations from Aguamenti to Wingardium Leviosa",
  "author": {
    "name": "oelison",
    "email": "iobrokermagicwand@sciphy.de"
  },
  "homepage": "https://github.com/oelison/ioBroker.magicwand",
  "license": "MIT",
  "keywords": [
    "wand",
    "wizzard",
    "receiver"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/oelison/ioBroker.magicwand.git"
  },
  "engines": {
    "node": ">= 18"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.0.6"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.7.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.0",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@iobroker/adapter-dev": "^1.0.1",
    "@iobroker/testing": "^4.1.1",
    "@tsconfig/node18": "^18.2.4",
    "@types/chai": "^4.3.14",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.11",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^7.18.0",
    "chai": "^4.4.1",
    "chai-as-promised": "^8.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "mocha": "^10.4.0",
    "prettier": "^3.3.3",
    "proxyquire": "^2.1.3",
    "rimraf": "^6.0.1",
    "sinon": "^19.0.2",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint --ext .ts src/",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/oelison/ioBroker.magicwand/issues"
  },
  "readmeFilename": "README.md"
}
